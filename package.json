{
  "name": "mcp-cursearch",
  "version": "0.0.1",
  "description": "MCP CurSearch - CLI tool and MCP server for semantic codebase search with Cursor API integration",
  "type": "module",
  "bin": {
    "mcp-cursearch": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cedriccmh/mcp-cursearch.git"
  },
  "scripts": {
    "build": "tsc -p .",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "start": "node dist/mcp.js",
    "mcp": "node dist/mcp.js",
    "start:with-token": "node dist/mcp.js --auth-token",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:search": "node dist/test-search.js",
    "debug:decrypt": "node dist/debug-decrypt.js"
  },
  "keywords": [
    "mcp",
    "cursearch",
    "codebase-search",
    "semantic-search",
    "cursor",
    "indexing",
    "code-search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anysphere/file-service": "0.0.0-1a538476",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/cli-progress": "^3.11.6",
    "async-mutex": "^0.5.0",
    "chokidar": "^3.5.3",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.2.0",
    "ignore": "^7.0.5",
    "node-fetch": "^3.3.2",
    "protobufjs": "^7.5.4",
    "uuid": "^9.0.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/picomatch": "^4.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "proto",
    "README.md"
  ]
}
